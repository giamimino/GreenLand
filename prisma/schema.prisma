generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Products {
  id String @id @default(cuid())
  image String
  title String
  Description String
  price Int
  slug String @unique
  isSale Boolean @default(false)
  isBestSelling Boolean @default(false)
  category String
  createAt DateTime @default(now())
  view Int
  prevPrice Int?
}

model admin {
  id String @id @default(cuid())
  specialCode String @unique
  user String
  personCode String
}