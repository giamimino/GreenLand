// Define database connection via the `DATABASE_URL` env var
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define custom output path for generated Prisma Client
generator client {
  provider = "prisma-client-js"
  output   = "../src/app/generated/prisma-client"
}

model Products {
  id String @id @default(cuid())
  image String
  title String
  Description String
  price Int
  slug String @unique
  isSale Boolean @default(false)
  isBestSelling Boolean @default(false)
  category String
  createAt DateTime @default(now())
  view Int @default(0)
  prevPrice Int?
  stock Int @default(1)
}

model admin {
  id String @id @default(cuid())
  specialCode String @unique
  user String
  personCode String
}

model Users {
  id String @id @default(cuid())
  name String
  email String @unique
  password String
  cart Json
  token String @unique @default(cuid())
  createdAt DateTime @default(now())

  sessionByUserId  SessionToken[]
  sessionByToken   SessionToken[] @relation("TokenRelation")
}

model SessionToken {
  id     String @id @default(cuid())
  user   Users  @relation(fields: [userId], references: [id])
  userId String
  userByToken Users  @relation("TokenRelation", fields: [token], references: [token])
  token       String
}